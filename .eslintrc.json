{
  "root": true,
  "env": {
    "node": true,
    "browser": true
  },
  "extends": [
    "eslint:recommended",
    "plugin:vue/recommended",
    "plugin:gridsome/recommended"
  ],
  "rules": {
    "vue/component-name-in-template-casing": [
      "error",
      "PascalCase"
    ]
    // "no-console": process.env.NODE_ENV === "production" ? "error" : "off",
    // "no-debugger": process.env.NODE_ENV === "production" ? "error" : "off"
  },
  "globals": {},
  "parserOptions": {
    "parser": "babel-eslint"
  }
}